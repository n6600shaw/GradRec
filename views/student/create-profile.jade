include ../layouts/_student_header.jade
.container
    .row.mt-sm-4.mt-md-5.mb-md-5
        .col-sm-12.border.rounded.p-5.bg-light
            h3 Create Profile
            p.text-muted
            form.needs-validation(novalidate='', action='javascript:submitProfile();')
                .form-group.mt-4
                    h5 Personal information
                    hr.mt-1.mb-2
                    .row
                        .col-sm-6.col-lg-5.col-xl-4.mb-3
                            label(for='firstName') First Name *
                            input#firstName.form-control(type='text', name='firstName', placeholder='John', required='')
                            .invalid-feedback First name is required.
                        .col-sm-6.col-lg-5.col-xl-4.mb-3
                            label(for='lastName') Last Name *
                            input#lastName.form-control(type='text', name='lastName', placeholder='Appleseed', required='')
                            .invalid-feedback Last name is required.
                .form-group.mt-4
                    h5 Education
                    hr.mt-1.mb-2
                    .row
                        .col-sm-5.col-lg-5.col-xl-4.mb-3
                            label(for='program') Degree Obtained *
                            select#program.form-control(name='program', required='')
                                option(value='') Choose...
                                option(value='Master') Master
                                option(value='PhD') PhD
                            .invalid-feedback Please choose your highest degree obtained.
                        .col-sm-7.col-lg-5.col-xl-4.mb-3
                            label(for='program') In The Department Of *
                            select#department.form-control(name='department', required='')
                                option(value='') Choose...
                                option(value='Business') Business
                                option(value='Biology') Biology
                                option(value='Chemistry') Chemistry
                                option(value='Computer Science') Computer Science
                                option(value='Engineering') Engineering
                                option(value='Physics') Physics
                            .invalid-feedback Please choose the department of your degree obtained.
                #interest.form-group.mt-4
                    h5 Research Interest
                    hr.mt-1.mb-2
                    .row
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#bioinfo.form-check-input(type='checkbox', name='bioinfo' value='Bioinformatics')
                                label.form-check-label(for='bioinfo') Bioinformatics
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#cv.form-check-input(type='checkbox', value='Computer Vision')
                                label.form-check-label(for='cv') Computer Vision
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#game.form-check-input(type='checkbox', value='Game AI')
                                label.form-check-label(for='game') Game AI
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#geno.form-check-input(type='checkbox', value='Genome Editing')
                                label.form-check-label(for='geno') Genome Editing
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#nano.form-check-input(type='checkbox', value='Nanomaterials')
                                label.form-check-label(for='nano') Nanomaterials
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#navig.form-check-input(type='checkbox', value='Ocean Navigation')
                                label.form-check-label(for='navig') Ocean Navigation
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#robo.form-check-input(type='checkbox', value='Robotics')
                                label.form-check-label(for='robo') Robotics
                        .col-sm-6.col-md-4.col-lg-3.mb-3
                            .form-check.form-check-inline
                                input#selfdrive.form-check-input(type='checkbox', value='Self Driving Cars')
                                label.form-check-label(for='selfdrive') Self Driving Cars
                #skills.form-group.mt-4
                    h5 Skills
                    hr.mt-1.mb-2
                    .row
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#angular.form-check-input(type='checkbox', value='angular')
                                label.form-check-label(for='angular') Angular
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#c.form-check-input(type='checkbox', value='c')
                                label.form-check-label(for='c') C/C++ 
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#html.form-check-input(type='checkbox', value='html')
                                label.form-check-label(for='html') HTML/CSS
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#java.form-check-input(type='checkbox', value='java')
                                label.form-check-label(for='java') Java
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#nodejs.form-check-input(type='checkbox', value='nodejs')
                                label.form-check-label(for='nodejs') Node.js
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#python.form-check-input(type='checkbox', value='python')
                                label.form-check-label(for='python') Python
                        .col-sm-6.col-md-4.col-lg-3
                            .form-check.form-check-inline
                                input#r.form-check-input(type='checkbox', value='r')
                                label.form-check-label(for='r') R
                        .col-sm-6.col-md-4.col-lg-3.mb-3
                            .form-check.form-check-inline
                                input#scala.form-check-input(type='checkbox', value='scala')
                                label.form-check-label(for='scala') Scala
                .form-group.mt-4
                    h5 Work Experience
                    hr.mt-1.mb-2
                    .row
                        .col.mb-3
                            label(for='workExp')
                                span.text-muted (no longer than 1000 characters)
                            textarea#workExp.form-control(name='workExp', rows='5')
                .form-group.mt-4
                    h5 Start Date
                    hr.mt-1.mb-2
                    .row
                        .col-xs-9.col-md-7.col-lg-5.mb-3
                            label(for='startDate') Please indicate your intended start date. *
                            input#startDate.form-control(type='date', name='startDate', min='2018-11-01', max='2020-12-31', required='')
                            .invalid-feedback Please choose your intended start date.
                .form-group.mt-4
                    h5 Research Funds
                    hr.mt-1.mb-2
                    .row
                        .col-xs-9.col-md-7.col-lg-5.mb-4
                            label(for='funds') Please indicate your needed funds range. *
                            select#funds.form-control(name='funds', required='')
                                option(value='') Choose...
                                option(value='Not needed') Not needed
               
                                option(value='$0 ~ $1,000 per semaster') $0 ~ $1,000 per semaster
                                option(value='$1,000 ~ $2,000 per semaster') $1,000 ~ $2,000 per semaster
                                option(value=' $2,000 ~ $3,000 per semaster') $2,000 ~ $3,000 per semaster
                            .invalid-feedback Please choose your needed funds range.
                .btn-toolbar
                    button.btn.btn-outline-success.btn-lg.mr-5.mt-3(type='button') Save Profile
                    button.btn.btn-primary.btn-lg.mt-3(type='submit', id='submitProfile') Submit Profile
