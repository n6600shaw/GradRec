include ../layouts/_student_header.jade
.jumbotron.bg-jumbo
   -if(user.matched.length>0){
    h1.display-4 Congratulations!
    hr.my-4
    p.lead You have #{user.matched.length} matched projects.
    p
   -} else {
     p.lead You dont have any matched projects now
     -}
   
.container
    .row(mx-2='')
       
    -for (var i=0;i<user.matched.length;i++){
    
        .col-sm-6.col-md-4.col-lg-3.mb-4
            .card.bg-light
                .card-header Project #{i+1}
                .card-body
                    p.card-text #{user.matched[i].title}.
                    a.btn.btn-primary(href='/show-project?user=#{user}') View details
    -}
        
       
